{
    "manifest_version": 3,
    "name": "GitHub Repository Visibility Highlighter",
    "version": "1.0",
    "description": "Highlights GitHub repository visibility status with colored borders",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "https://github.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://github.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "icons": {
        "48": "icon48.png",
        "128": "icon128.png"
    }
}